alert($type, $color = #000)
    &.alert-{$type}{
        background $color
        border 1px solid darken($color, 10%)
        color darken($color, 50%)
    }

caret($size, $color)
    &:before
        content ""
        border-right $size solid darken($color, 10%)
        border-top $size solid transparent
        border-bottom $size solid transparent
        width 0
        height 0
        display block
        font-size 0

    &:after
        content ""
        border-right $size solid $color
        border-top $size solid transparent
        border-bottom $size solid transparent
        width 0
        height 0
        display block
        font-size 0


.alert
    display block
    background #ccc
    border 1px solid darken(#ccc, 10%)
    border-radius 5px
    position relative
    margin-top 0
    transform: scale(0, 0);
    opacity 0
    visibility hidden
    max-height 0
    transition(all 300ms cubic-bezier(0,1.61,.47,.82));

    button
      background none
      border none

    .progress
      display none

    &.fadeInDown
      transform: scale(1, 1);
      opacity 0
      visibility visible
      width 400px
      max-height 100px
      padding 10px

      transition(all 1s cubic-bezier(0,1.61,.47,.82));

      alert(danger, #f2dede)
      alert(success, #79a944)

      &.alert-success
        color #fff

      &.animated
        opacity 1



    &.in
        opacity 1
        visibility visible
        max-height 200px
        transform: scale(1, 1);
        margin-top 10px

    .close
        position absolute
        top 0
        right 0
        font-size 16px
        line-height 1
        margin 5px 10px 0 0
        cursor pointer
        transition(all 400ms)

        &:hover
            transform: rotate(90deg)

    .alert-body
        padding 15px 20px

    &.input-alert
        position absolute
        bottom 0
        padding 0 10px
        left 100%
        white-space nowrap
        margin-left 20px
        height 32px
        line-height 32px

        &:before, &:after
            position absolute
            top 0
            bottom 0
            left -10px
            margin auto

        &:after
            left -9px

        caret(10px, #f2dede);


    alert(error, #f2dede)

