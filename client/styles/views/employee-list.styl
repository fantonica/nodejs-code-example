
.search-wrapper
    vertical-align: top
    padding: 6px 8px 5px 8px
    border-radius 48px
    border: 1px solid #000
    display: inline-block
    overflow: hidden

.fake-icon
    background: url('/img/search.png')
    width: 24px
    height: 24px
    background-size: auto 100%
    display: inline-block
    transition: all 0.5s
    .enable &
        transform translateX(50px)

.employees-list-container
    width: 960px
    margin: auto

.search-employees-field
    width: 0
    height: 24px
    border: 0
    padding: 0
    vertical-align: top
    transition: width 0.5s
    .enable &
        width: 120px
    &:focus
        outline: none

.employees-surname-container
    padding: 10px

.employees-surname-list
    display: inline-block
    max-width: 320px
    vertical-align: top
    position: absolute
    z-index: 3
    background: #fff
    border: 1px solid #000
    border-radius: 4px
    -webkit-touch-callout none
    -webkit-user-select none
    -khtml-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none

    span
        transition: all 0.2s
        width: 0
        height: 0
        opacity: 0
        overflow: hidden
        margin: 0

.employees-surname-container.close
    cursor pointer
    .close-button
        display: none

.close-button
    display: block
    position: absolute
    right: 5px
    top: 5px
    cursor pointer

.employees-list-container
    margin-top: 10px

.employees-table
    margin-top: 30px

.employees-search
    margin-right: 15px

.employees-surname-container.open
    span
        width: 16px;
        height: 26px;
        opacity: 1;
        margin: 10px;
        text-align: center;

.employees-search
    display: inline-block
    vertical-align: top

.employees-list-item
    display: inline-block
    width: 160px
    margin-right: 30px
    vertical-align: top
    margin-bottom: 30px
    text-align: center

    .skill
      display block

.employee-photo
    width: 160px
    height: 160px

    img
        border-radius 50%

.first-name
    display: inline-block

.surname-letter
    position: relative
    &:after
        position: absolute
        content: ''
        width: 100%
        height: 1px
        left: 0
        top: 50%
        background-color: #000
        z-index: 1

.first-letter
    display: inline-block
    padding: 5px 12px
    background-color: #fff
    position: relative
    z-index: 2
    font-size: 20px
    border-radius 30px
    border: 1px solid #000

.surname-first-letter
    font-size: 20px
    display: inline-block
    margin: 4px
    cursor pointer

    &.active
        background #3ad5b1
        color #fff

.show-all
    cursor pointer

.avatar
  position relative

  .delete-img
    position absolute
    top 10px
    right 10px
    background #3ad5b1
    border-radius 50px
    border none
    color #fff
    font-size 24px
    line-height 24px
    height 30px
    text-align center
    display block
    transform scale(0, 0)
    transition(all 300ms cubic-bezier(0, 1.61, 0.47, 0.82));

    span
      font-size 14px
      margin-left 10px
      vertical-align middle
      display inline-block

  &:hover
    .delete-img
      transform scale(1, 1)
.image-cat
    width 500px
    background #fff
    margin auto

    .image-cropper-wrapper
        margin auto
        max-height 600px

    .crop-container
        background #ccc
        width 100%
        height 100%

    .navigation
        position relative
        z-index 10
        padding 20px 0

        button
            display inline-block
            margin 0 10px



